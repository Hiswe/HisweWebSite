.hw-projects-gallery
  width unit($desktop-width, 'px')
  margin 0 auto

.hw-projects-gallery-container
  background $grey
  border solid $grey
  border-width 1px 0
  margin 4em 0
  height px2em(carrouselHeight)

  h3 + &
    margin-top 0

  .hw-projects-content-container &
    visibility hidden

  .{activeClass} &
    visibility visible

.hw-projects-gallery
  height 100%

  a
    svg-link()

  ul
    width 100%
    height 100%
    overflow auto
    white-space nowrap
    // remove white-space between images
    // http://yuilibrary.com/yui/docs/cssgrids/
    // http://davidwalsh.name/remove-whitespace-inline-block
    letter-spacing -0.31em
    text-rendering optimizespeed

  li
    height 100%
    display inline-block
    position relative
    max-width 90%
    overflow hidden
    vertical-align text-top
    v-align()

    a
      absolute top 1em right 1em
      z-index 2
      background none

      .svgicon
        fill $pink

      .hover &:hover .svgicon
        fill $blue

  figure
    reset-box-model()
    max-height 100%

  figcaption
    absolute bottom left
    right 0
    background $black
    letter-spacing 0
    text-align center
    padding .5em 0
    color white
    text-rendering optimizeLegibility

  .hw-projects-image-vector img
    max-width 100%
    max-height 100%

// JS Carrousel
.{carrouselClass}
  position relative
  padding-top 2em
  box-sizing content-box

  .hw-projects-gallery
    overflow visible
    height px2em(carrouselHeight)

  ul
    overflow visible
    position relative
    box-sizing content-box

  li
    overflow visible
    max-width none
    perspective 1000px
    transform-origin center center
    transform-style preserve-3d
    absolute top left
    bottom 0; right 0
    display none
    text-align center
    cursor pointer

    a
      position absolute
      top -1.5em

  figure
    max-width 100%

    .hw-projects-lazyload-loading::after
      square-spinner()

  progress.bg-projects-progress
    absolute top -1px left
    height 2px; width 100%
    appearance none
    border none
    background $black
    &::-webkit-progress-bar
      background $black
    &::-moz-progress-bar
      background $pink
    &::-webkit-progress-value
      background $pink

  figcaption
    bottom auto
    top -2em
    background none
    color $black

  .{carrouselClassSelected}
    cursor inherit
    display block

.hw-projects-gallery-control
  position absolute
  top 50%
  transform translateX(-100%) translateY(-50%)

  .svgicon
    fill white

  &:hover .svgicon
    fill $pink

.hw-projects-gallery-control-prev
  left 1em
  transform translateY(-50%)

.hw-projects-gallery-control-next
  right 1em
  transform translateY(-50%)

// ———————————————————
// @media Tablet
// ———————————————————
media-tablet()

.hw-projects-gallery-container,
.hw-projects-gallery,
.hw-projects-gallery ul
  width 100%

.hw-projects-gallery-container,
.{carrouselClass} .hw-projects-gallery
  height 22em

.{carrouselClass}
  li
    width 100%
  img
    width auto; height auto
    max-width 100%; max-height 100%

media-query-end()
