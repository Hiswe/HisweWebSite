@import './../panels-services/services-transitions'

.hw-responsive-linebreak
  display block

.hw-word-break
  display inline
  white-space nowrap

// Mobile Portrait Size to Mobile Landscape Size (devices and browsers)
media-small-mobile()

body
  padding-top 0

.hw-responsive-linebreak
  display inline

.main-content
  transition padding .5s

  .{activeBody} &
    padding-bottom 36em

.hw-main-title
  position relative; z-index 2
  padding-top .15em
  padding-bottom .35em
  padding-left 0

.hw-main-title,
.hw-title
  margin 0; top auto
  text-align center
  position relative
  width auto

.hw-title
  text-align center
  font-size 2.75em
  display block
  padding  1em 0 .25em

.hw-main-navigation
  width auto
  fixed left bottom
  top auto
  padding-bottom 0

  ul
    clearfix()
    margin-top 0

  li
    width third()
    float left
    // TODO find a way to remove the important
    background noir(.75) !important

    a
      padding .5em 0

.hw-main-title,
.hw-main-title span,
.hw-title,
.hw-title span
  iso-reset()

media-query-end()
