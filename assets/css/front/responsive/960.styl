media-tablet()

.main-content
  width auto

.hw-title
  font-size 2.25em
  relative top -.25em

.hw-main-title,
.hw-main-title a span,
.hw-main-navigation .hw-panels-pink li,
.hw-splah-description p,
.hw-splah-description p + p,
.hw-contact aside
  margin 0
  iso-reset()

// Header
.hw-main-title
  right 0
  text-align center

.hw-main-navigation
  width third(2)

// Splash
.hw-splash

  .hw-splah-description
    padding 0; margin 0

.hw-splah-description
  z-index 1

  p,
  p + p
    background none
    height auto

  p
    line-height 130%
    padding-bottom 1em

  p + p
    text-align right

.hw-sub-description .hw-sub-panel
  font-size 1em

// Contact
.hw-contact
  aside, .hw-contact-form
    float none
    min-height 0
    margin 0 auto
    width auto
    padding 0 1em

  aside
    background none
    margin-top .5em

    p
     line-height auto
     padding 1em 0 0; margin 0

    span
      display inline
media-query-end()