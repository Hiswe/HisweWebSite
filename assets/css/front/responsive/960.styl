@import '../css-config'
@import '../css-mixins'

// Smaller than standard 960 (devices and browsers)
@media only screen and (max-width: 959px)
  if debug()
    html::before
      fixed top left
      content '960'
      height 1em
      background noir()
      padding .5em 2em
      color white
      z-index 10

  html
    padding 0

  body
    padding-top px2em($main-border)
    border 0

  .main-content
    width auto

  .hw-title
    font-size 2.25em;
    top -4em

  .hw-main-title,
  .hw-main-title a span,
  .hw-main-navigation .hw-panels-pink li,
  .hw-splah-description .hw-hire,
  .hw-splah-description p,
  .hw-splah-description p + p,
  .hw-contact aside
    margin 0
    iso-reset()

  // Header
  .hw-main-title
    padding-left .25em

  .hw-main-navigation
    width third(2)

  // Splash
  .hw-splash
    padding-top 4em

    h2
      position relative; z-index 2
      margin 0; padding 0 0 4em

    .hw-splah-description
      padding 0; margin 0

  .hw-splah-description
    z-index 1

    p,
    p + p
      background none
      height auto

    p
      line-height 130%
      padding-bottom 1em

    p + p
      text-align right

    .hw-hire
      float none
      display block
      margin 0 auto
      width 65%

      &:before,
      &:after
        display none

      &:active
        top 0; left 0

  .hw-portrait
    width auto
    right 0
    z-index -1
    iso-reset()
    border 0

    object
      iso-reset()

  .hw-services h6
    font-size 1.25em
    letter-spacing 0.05em

  .hw-sub-description .hw-sub-panel
    font-size 1em

  // Contact
  .hw-contact
    aside, .hw-contact-form
      float none
      min-height auto
      margin 0 auto
      width auto
      padding 0 1em

    aside
      background none
      margin-top .5em

      p
       line-height auto
       padding 1em 0 0; margin 0

      span
        display inline


