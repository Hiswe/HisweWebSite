@import 'nib/reset'
@import './css-config'
@import './css-mixins'

html, body, ul, dt, dl, dd
  reset-box-model()

html, body
  font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif

html
  background-color white
  height 100%

body
  min-height 100%
  box-sizing border-box
  border px2em($main-border) solid white
  background-color lighten($dark-pink, 15%)
  background-image -moz-radial-gradient(circle at 25% 25%,  $pink 0%, @background-color 35em)
  background-image -webkit-radial-gradient(circle at 25% 25%,  $pink 0%, @background-color 35em)
  background-image -o-radial-gradient(circle at 25% 25%,  $pink 0%, @background-color 35em)
  background-image -ms-radial-gradient(circle at 25% 25%,  $pink 0%, @background-color 35em)
  background-image radial-gradient(circle at 25% 25%,  $pink 0%, @background-color 35em)

  background-repeat no-repeat
  color white

a
  text-decoration none
  color white
  outline none

.main-content
  width px2em(930)
  margin 0 auto
  padding 1px 0 7em
  position relative

.hw-title
  font-size 3em; font-weight normal
  font-family "hiso-bright", "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  crisp-font-smoothing()
  display inline-block
  width 50%; padding-bottom .15em
  iso-left()


  span
    display inline-block
    iso-right()

.hicon
  font-weight normal; font-style: normal;

.hw-hiso-left
  iso-left()

.hw-hiso-right
  iso-right()

// Don't play animation on page OnLoad
// http://css-tricks.com/transitions-only-after-page-load/
.preload *
  transition: none !important

