@import 'nib'
@import './css-config'
@import './css-mixins'

.pages
  white-space nowrap
  > *
    white-space normal
    display inline-block
    box-sizing border-box
    width third()
    vertical-align top

    .hicon
      display inline-block

  > :nth-child(3n + 1),
  > :nth-child(3n + 3)
    background $pink
    iso-left()

    .hicon
      iso-right()
      color $dark-pink

  > :nth-child(3n + 2)
    background $dark-pink
    iso-right()

    .hicon
      iso-left()
      color $pink

  > .hw-panel-active,
  > .hw-panel-active .hicon
    iso-reset()

  > .hw-panel-active .hicon.website
    mirror-vertical()
