@import 'nib'
@import './css-config'
@import './css-mixins'

.pages
  white-space nowrap
  > *
    white-space normal
    display inline-block
    box-sizing border-box
    width 33.33333%

  > :nth-child(3n + 1),
  > :nth-child(3n + 3)
    background $pink
    iso-left()

  > :nth-child(3n + 2)
    background $dark-pink
    iso-right()