@import 'hstrap/mixins/general'

support-for-ie        = false

$light-pink           = #ff74b9
$pink                 = #ff0078
$dark-pink            = #7a0037

$light-blue           = #2db6e9
$blue                 = #009ae1
$dark-blue            = #008edc

$light-gray           = #ecf4f8
$light-grey           = $light-gray
$gray                 = #cddce4
$grey                 = $gray
$dark-gray            = #576176
$dark-grey            = $dark-gray
$darkest-gray         = #454A5D
$darkest-grey         = $darkest-gray

$black                = #445

$main-border          = 21
$desktop-width        = 1080
$project-width        = 700
$tablet-width         = unit( $desktop-width - 1 + ( 2 * $main-border ), 'px')
$mobile-width         = unit(479, 'px')
$mobile-cover-height  = 220

$panel-height         = 312
$panel-fs             = 21
$panel-padding        = px2em(22, $panel-fs)

// Hover effect
$hover-color          = $pink
$hover-width          = 8
$hover-transition     = .25s

// Hstrap config
$buttons-primary-light  = $light-blue
$buttons-primary-medium = $blue
$buttons-primary-dark   = $blue
