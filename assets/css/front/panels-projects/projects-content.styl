@import 'nib/positions'
@import 'nib/reset'
@import './css-config'
@import './css-mixins'

.hw-projects-content
  h1, h2, h3, h4, h5, h6, ol, p
    width unit($project-width, 'px')
    margin 0 auto
    crisp-font-smoothing()

  h1
    color $pink
    text-align center
    font-dark()
    font-size 4em
    padding .5em 0 .25em

    + h2
      text-align center
      color $dark-grey
      font-weight 300
      font-size 1.5em
      padding-bottom 1em

  p
    font-size px2em(22)
    letter-spacing 0.16px
    line-height 1.5em


.hw-projects-gallery-container
  background $light-grey
  margin 1em 0

.hw-projects-gallery
  background $black
  width unit($desktop-width, 'px')
  margin 0 auto

  ul
    width 100%
    overflow auto
    white-space nowrap
    // remove white-space between images
    // http://yuilibrary.com/yui/docs/cssgrids/
    // http://davidwalsh.name/remove-whitespace-inline-block
    letter-spacing -0.31em
    text-rendering optimizespeed
  li
    display inline-block
    max-width 80%
    overflow hidden
    image-center()

.{carrouselClass} .hw-projects-gallery
  overflow hidden
  perspective 1000px

  ul
    transform translate3d(0px,0px,0px)
    overflow visible
    // so jQuery will know it's the offset parent
    position relative

  li
    opacity .1
    cursor pointer
    transition opacity .5s

  .{carrouselClassSelected}
    opacity 1
    cursor inherit
