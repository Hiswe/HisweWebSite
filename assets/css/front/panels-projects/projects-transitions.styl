@import 'nib/vendor'
@import 'hstrap/mixins/h-ease'

// Timing configuration
t-cover   = .5s
t-content = .5s
t-between = 0s

// Delay computing
d-cover-in    = (t-cover + t-between) * 1
d-content-in  = d-cover-in + (t-content + t-between) * 1
d-content-out = (t-content + t-between) * 2

d-full        = d-cover-in + d-content-out + t-between

// Easing
e-cover-in    = "easeInCubic"
e-cover-out   = "easeOutCubic"

// Cover panel
projects-cover-in()
  transition-property         transform,      height,         z-index,      top,            background,     left,           box-shadow
  transition-duration         t-cover,        t-cover,        0s,           t-cover,        t-cover,        t-cover,        $hover-transition
  transition-timing-function  ease,           ease,           ease,         ease,           ease,           ease,           ease
  transition-delay            0s,             0s,             0s,           0s,             0s,             0s,             0s

projects-cover-out()
  transition-property         transform,      height,         z-index,      top,            background,     left,           box-shadow
  transition-duration         t-cover,        t-cover,        0s,           t-cover,        t-cover,        t-cover,        $hover-transition
  transition-timing-function  ease,           ease,           ease,         ease,           ease,           ease,           ease
  transition-delay            d-content-out,  d-content-out,  d-full,       d-content-out,  d-content-out,  d-content-out,  0s

// Container panel
projects-container-in()
  transition all 0s ease d-cover-in

projects-container-out()
  transition all 0s ease d-content-out

// Content panel
projects-content-in()
  transition-property         transform,    border,       opacity
  transition-duration         t-content*2,  t-content,    t-content
  transition-timing-function  ease,         ease,         ease
  transition-delay            d-cover-in,   d-content-in, d-cover-in

projects-content-out()
  transition-property         transform,    border,       opacity
  transition-duration         t-content*2,  t-content*2,  t-content
  transition-timing-function  ease,         ease,         ease
  transition-delay            0s,           0s,           t-content

// Close button
projects-close-button-in()
  transition-property         visibility,   top,          right,        opacity
  transition-duration         0s,           0s,           0s,           t-content
  transition-timing-function  ease,         ease,         ease,         ease
  transition-delay            d-content-in*2, d-content-in*2, d-content-in*2, d-content-in*2

projects-close-button-out()
  transition-property         visibility,   top,          right,        opacity
  transition-duration         0s,           0s,           0s,           t-content
  transition-timing-function  ease,         ease,         ease,         ease
  transition-delay            t-content,    t-content,    t-content,    0s