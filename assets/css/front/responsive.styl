@import './css-config'
@import './css-mixins'

// Smaller than standard 960 (devices and browsers)
@media only screen and (max-width: 959px)
  html
    padding 0

  body
    padding-top px2em($main-border)

  .main-content
    width auto

  .hw-title
    font-size 2.25em;
    top -4em

  header.hw-splash
    p, .hw-hire
      font-size .75em



