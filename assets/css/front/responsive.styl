@import './css-config'
@import './css-mixins'

// Smaller than standard 960 (devices and browsers)
@media only screen and (max-width: 959px)
  if debug()
    html::before
      fixed top left
      content '960'
      height 1em
      background noir()
      padding .5em 2em
      color white
      z-index 10

  html
    padding 0

  body
    padding-top px2em($main-border)
    border 0

  .main-content
    width auto

  // .hw-main-navigation
  //   width third(2)

  .hw-title
    font-size 2.25em;
    top -4em

  header.hw-splash
    p, .hw-hire
      font-size .75em

// Mobile Portrait Size to Mobile Landscape Size (devices and browsers)
@media only screen and (max-width: 479px)
  if debug()
    html::before
      content "479"

  body
    background $dark-gray

  .hw-main-title
    position relative; z-index 2

  .hw-main-title,
  .hw-title
    margin 0; top auto
    text-align center
    position relative
    width auto

  .hw-title
    text-align center
    font-size 2.75em
    display block
    padding  1em 0 .25em

  .hw-main-navigation
    width auto
    position fixed
    left 0; top auto; bottom 0
    padding-bottom 0

    ul
      clearfix()
      margin-top 0

    li
      width third()
      float left
      // TODO remove the important
      background noir(.75) !important

      a
        padding .5em 0

  .hw-main-title,
  .hw-main-title span,
  .hw-title,
  .hw-title span,
  .hw-panels > :nth-child(n),
  .hw-splah-description p,
  .hw-splah-description p + p,
  .hw-splah-description .hw-hire,
  .hw-sub-container .hw-sub.hw-sub-default,
  .hw-sub-container .hw-sub.hw-sub-default .hicon
    iso-reset()

  .hw-splash
    padding-top 2em

    h2
      position relative; z-index 2

    h2,
    .hw-splah-description
      padding 0; margin 0


    .hw-splah-description
      z-index 1
      text-align center

      p,
      p + p
        background none
        text-align left

      .hw-hire
        float none

        &:before,
        &:after
          display none

    .hw-portrait
      width auto
      right 0
      z-index -1
      iso-reset()
      // TODO recolor the SVG using css
      opacity .35
      border 0

      object
        iso-reset()

  .hw-panels > *,
  .hw-sub-container
    display block
    width auto

  .hw-sub-container
    height 12.5em

  .hw-services-title p
      margin 0

  .hw-services .hw-services-title
    padding 0
