.hw-menu-input,
.hw-menu-input-label
  display none

.hw-main-title
  font-dark()
  background white
  color $black
  font-size 3em; font-weight normal
  text-align center
  margin 0
  padding .5em 0

  a
    display inline-block
    color $pink
    crisp-font-smoothing()
    line-height 1em
    padding 0 0 .15em .15em
    border 2px solid transparent

    &:hover
      border-color $pink

    &:active
      color $blue
      border-color $blue

.hw-main-navigation
  position relative

  ul, li
    reset-box-model()

  ul
    absolute top 2em right
    overflow hidden
    text-align right

  li
    display inline-block

  a
    font-size 1.25em
    display block
    text-align center
    color $black
    text-transform uppercase
    letter-spacing 0.1em

    &:hover
      color $blue

.hw-splash
  padding 3em 0 0
  clearfix()

  h2,
  .hw-splah-description
    float left
    width 50%;

  h2, p
    margin 0
    text-align left
    box-sizing border-box

  h2
    font-weight 300
    font-size px2em(40)
    color $black
    padding-right px2em(10, 40)

    strong
      font-weight 300
      white-space nowrap

  p
    font-size px2em(21)
    padding-left px2em(10, 21)
    margin-bottom 1em
    line-height 1.25em


// —————————————
// @media tablet
// —————————————

media-tablet()

.main-content
  width auto

.hw-title
  font-size 2.25em
  relative top -.25em

// Header
.hw-main-title
  right 0
  text-align center

.hw-main-navigation
  right 1em

// Splash
.hw-splash
  padding 1em 1em 0

.hw-splah-description
  z-index 1

  p
    background none
    height auto
    line-height 130%
    padding-bottom 1em


media-query-end()

// ———————————————————
// @media big mobile
// ———————————————————
media-big-mobile()

// Splash
.hw-splash
  padding-bottom  1em

  h2
    font-size px2em(30)
    padding-bottom .75em

  .hw-splah-description,
  h2,
  p
    float none
    width auto
    padding-left 0
    padding-right 0
    text-align center

  p
    line-height 140%
    padding-bottom 0
    margin-bottom 0


media-query-end()
// ———————————————————
// @media small mobile
// ———————————————————
media-small-mobile()

// Splash
.hw-splash
  h2, strong
    font-weight 400

  h2,
  .hw-splah-description,
  p
    text-align left

.hw-splah-description p
  display block
  width auto; height auto; min-height 0
  padding-bottom 1em
  line-height 140%


media-query-end()
