.hw-main-title
  font-dark()
  background white
  color $black
  font-size 3em; font-weight normal
  text-align center
  margin 0
  padding .5em 0

  a
    display inline-block
    color $pink
    crisp-font-smoothing()
    line-height 1em
    padding 0 0 .15em .15em
    border 2px solid transparent

    &:hover
      border-color $pink

    &:active
      color $blue
      border-color $blue

.hw-main-navigation
  position relative

  ul, li
    reset-box-model()

  ul
    absolute top 1em right
    overflow hidden
    text-align right

  li
    display inline-block

  a
    font-size 1.25em
    display block
    text-align center
    color $black
    text-transform uppercase
    letter-spacing 0.1em

    &:hover
      color $blue

.hw-splash
  position relative
  z-index 1

  h2
    font-weight normal
    font-size 2.5em
    text-align center
    color $black
    margin 1em 0

    strong
      font-weight 300

  .hw-splah-description
    position relative

  p, .hw-hire
    box-sizing border-box
    display inline-block
    font-size px2em(21)

  p
    vertical-align top
    width 50%; height 3em
    padding 0 1em
    padding-left 0
    line-height 1.25em

    + p
      padding-right 0

  .hw-hire
    $hw-hire-depth = .5em
    width 45%; padding 1em; margin-top -2.75em
    background $dark-blue
    color white
    float right
    position relative
    text-align center; font-weight bold
    transition box-shadow $hover-transition, background $hover-transition

    &:hover
      box-shadow inset 0 0 0 .5em $hover-color

    &:active
      left -9px
      top -5px
      box-shadow none
