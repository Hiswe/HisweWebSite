@import 'nib/positions'
@import 'nib/vendor'
@import './css-config'
@import './css-mixins'

.hw-main-title
  font-dark()
  background white
  color black
  font-size 3em; font-weight normal
  text-align center
  margin 0
  padding-bottom .5em

  a
    span
      color black
      display inline-block
      height 1em
      position relative
      z-index 2
      line-height 100%
      color $pink

      &::after
        line-height 100%
        absolute left bottom 1px
        height 1em
        z-index -1
        content attr(data-text)
        color blanc(0)
        font-plain()
        crisp-font-smoothing()

    &:hover span::after
      color blanc(1)

.hw-main-navigation
  position relative

  ul, li
    reset-box-model()

  ul
    absolute top 1em right
    overflow hidden
    text-align right

  li
    display inline-block

  a
    font-size 1.25em
    display block
    text-align center
    color $black
    text-transform uppercase
    letter-spacing 0.1em

    &:hover
      color $blue

.hw-splash
  position relative
  z-index 2

  h2
    font-weight normal
    font-size 2.5em
    text-align center
    color black
    margin 1em 0

    strong
      font-weight 300

  .hw-splah-description
    position relative

  p, .hw-hire
    box-sizing border-box
    display inline-block
    font-size px2em(21)

  p
    vertical-align top
    width 50%; height 4em
    line-height 1.25em

  .hw-hire
    $hw-hire-depth = .5em
    width 45%; padding 1em; margin-top -2.75em
    background $dark-blue
    color white
    float right
    position relative
    text-align center; font-weight bold
    transition box-shadow $hover-transition, background $hover-transition

    &:hover
      box-shadow inset 0 0 0 .5em $hover-color

    &:active
      left -9px
      top -5px
      box-shadow none
