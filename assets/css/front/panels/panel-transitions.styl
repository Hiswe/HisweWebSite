@import 'nib/vendor'

trans-time  = .5s
move-time   = .75s
delay-in    = trans-time + .25s
delay-out   = move-time + .25s
delay-full  = move-time + trans-time + .25s

panel-in()
  transition all trans-time ease-in-out

panel-out()
  transition all trans-time ease-in-out delay-out

sub-in()
  transition-property         left,       background, visibility, transform,  box-shadow
  transition-duration         move-time,  move-time,  move-time,  move-time,  $hover-transition
  transition-timing-function  ease,       step-start, step-end,   ease,       ease
  transition-delay            0,          0,          0,          delay-in,   0

sub-out()
  transition-property         left,         background, visibility, transform,  box-shadow
  transition-duration         move-time,    delay-full, move-time,  move-time,  $hover-transition
  transition-timing-function  ease-in-out,  step-end,   step-end,   ease,       ease
  transition-delay            0,            0s,         0,          delay-out,  0

icon-in()
  transition transform trans-time ease-in-out, color move-time step-start

icon-out()
  transition transform trans-time ease-in-out delay-out, color trans-time step-end delay-out

close-in()
  transition-property         left,         opacity,    color
  transition-duration         trans-time,   trans-time, trans-time
  transition-timing-function  step-end,     ease,       ease
  transition-delay            0,            delay-full, 0

close-out()
  transition-property         left,         opacity,    color
  transition-duration         move-time,    move-time,   move-time
  transition-timing-function  ease-in-out,  ease,       ease
  transition-delay            0,            delay-out,  0
