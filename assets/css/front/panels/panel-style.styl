@import 'nib/reset'
@import 'nib/vendor'
@import 'nib/positions'
@import '../css-config'
@import '../css-mixins'

.hw-sub-container
  position relative

  a
    color $blue

    &:hover
      color $light-blue

  .hicon
    font-size 6em
    // Transform doesn't work on inline display
    display inline-block
    color $pink

  .hw-sub
    overflow hidden
    height 100%; width @height
    box-sizing border-box
    absolute top left
    z-index 1

  .hw-sub-default
    z-index 3
    color $black
    background white

  &:nth-child(3n+2) .hw-sub-default
    background $grey

.hw-sub-container:not(.{activeClass})
  .hw-sub-default
    cursor pointer

  .hw-sub-default:hover
    box-shadow inset 0 0 0 px2em($hover-width) $hover-color

// Panel open
.hw-panels-open
  perspective 1000px
  perspective-origin center center
  color blanc(.9)
  crisp-font-smoothing()

  h3:first-child
    margin-top 0

  .hw-sub-left,
  .hw-sub-right
    background $darkest-grey

  .{activeClass} .hw-sub-default
    color white
    background $dark-grey

    .hicon
      color $darkest-gray

.hw-sub-panel
  height 100%; width @height
  box-sizing border-box
  padding $panel-padding $panel-padding 0

  .hw-sub-links &,
  .hw-sub-description &
    font-size px2em($panel-fs)

  .hw-sub-description &
    line-height 1.5em

    p
      margin-bottom 0

    ul, li
      list-style none
      reset-box-model()

    li
      padding-left 1em
      position relative

    li::before
      content '\25A0'
      color $dark-grey
      absolute left

// Close button
.hw-sub-close
  width 2em; height @width
  absolute top .5em left 100%; z-index 2
  text-align center; line-height 1.5em
  background $dark-gray; box-shadow 2px 2px 0 noir(.75)
  cursor pointer
  margin-left -2.5em

  &::after
    color $blue
    font-size 2em
    content 'Ã—'
    font-weight bold

  &:hover::after
    color $blue

  &:active
    transform translate(2px, 2px)
    box-shadow none

.hw-panel-cover
  display block
  position relative
  padding 0

  .hw-panel-cover-in
    position absolute
    top px2em($hover-width, $panel-fs)
    left @top; right @top; bottom @left
    v-align()
    overflow hidden
    text-align center

  img,
  object
    max-width 100%
    max-height 100%

