.hw-services
  position relative
  z-index 1

  .hw-services-list
    perspective 1000px
    perspective-origin center center
    color blanc(.9)
    crisp-font-smoothing()

    h3:first-child
      margin-top 0

    .hw-sub-left,
    .hw-sub-right
      background $darkest-grey

    .{activeClass}
      z-index 2

      .hw-services-cover
        color white
        background $dark-grey

        .hicon
          color $darkest-gray

.hw-highlight
  z-index 2

.hw-services-item
  position relative
  display inline-block
  width third()
  transform-style preserve-3d

  .hicon
    font-size 6em
    // Transform doesn't work on inline display
    display inline-block
    color $pink

  .hw-sub
    overflow hidden
    height 100%; width @height
    box-sizing border-box
    absolute top left
    z-index 1

  &:nth-child(3n+2) .hw-services-cover
    background $grey

  &:not(.{activeClass})
    .hw-services-cover
      cursor pointer

      &:hover
        box-shadow inset 0 0 0 px2em($hover-width) $hover-color

.hw-services-cover
    z-index 3
    color $black
    background white
    box-sizing border-box
    padding 3em 0 0
    text-align center
    v-align()

    h6
      font-size 1.75em; text-transform uppercase
      letter-spacing .2em
      font-weight normal
      margin 0 0 0

.hw-sub-panel
  height 100%; width @height
  box-sizing border-box
  padding $panel-padding $panel-padding 0

  .hw-sub-links &,
  .hw-sub-description &
    font-size px2em($panel-fs)

  .hw-sub-description &
    line-height 1.5em

    p
      margin-bottom 0

    ul, li
      list-style none
      reset-box-model()

    li
      padding-left 1em
      position relative

    li::before
      content '\25A0'
      color $dark-grey
      absolute left


// Close button
.hw-sub-close
  width 2em; height @width
  absolute top .5em left 100%; z-index 2
  text-align center; line-height 1.5em
  background $dark-gray; box-shadow 2px 2px 0 noir(.75)
  cursor pointer
  margin-left -2.5em

  &::after
    color $blue
    font-size 2em
    content 'Ã—'
    font-weight bold

  &:hover::after
    color $blue

  &:active
    transform translate(2px, 2px)
    box-shadow none

.hw-panel-cover
  display block
  position relative
  padding 0

  .hw-panel-cover-in
    position absolute
    top px2em($hover-width, $panel-fs)
    left @top; right @top; bottom @left
    v-align()
    overflow hidden
    text-align center

  img,
  object
    max-width 100%
    max-height 100%

// @media Tablet
media-tablet()

.hw-services h6
  font-size 1.25em
  letter-spacing 0em

media-query-end()

// @media Big Mobile
media-big-mobile()

.hw-services-item
  width 50%

.hw-services-item:nth-child(2n)
  // &.{activeClass} .hw-services-cover
  //   left -50%

  .hw-services-cover
    iso-right()
    background $grey

.hw-services-item:nth-child(2n + 1)
  // &.{activeClass} .hw-services-cover
  //   left 50%

  .hw-services-cover
    iso-left()
    background white

media-query-end()
