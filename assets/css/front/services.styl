@import 'nib'
@import './css-config'
@import './css-mixins'

.hw-services
  li
    height px2em($panel-height)
    box-sizing border-box
    padding 3em
    text-align center
    cursor pointer

  h6
    font-size 2.5em; text-transform uppercase
    letter-spacing .25em
    font-weight normal
    margin 0

  .hicon
    font-size 6em
    text-indent 0.45em
    line-height 1em

  .hicon.website
    transform matrix(-1, 0.5, 0, 1, 0, 0)
