@import 'nib/reset'
@import './css-config'
@import './css-mixins'

.hw-services
  .hw-services-title
    height px2em($panel-height)
    box-sizing border-box
    padding 3em
    text-align center
    cursor pointer
    v-align()

  h6
    font-size 2.5em; text-transform uppercase
    letter-spacing .25em
    font-weight normal
    margin 0

  .hicon
    font-size 6em
    line-height 1em

  .hicon.website
    t-matrix(-1, 0.5, 0, 1)

  dd
    display none
