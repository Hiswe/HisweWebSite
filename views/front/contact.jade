extends layout

block content
  section.hw-contact
    aside: p Contact me, <br> I'd love to hear from your projects
      //- | If you'd like to get in touch with me so...
      //- | If you'd like to get in touch with me to discuss your ideas, your business, or just to learn more about who we are â€” we'd love to hear from you:
      //- | ...how can I Help you ?

    form.hw-contact-form(action="/contact", method="post")
      if success.length
        each message in success
          p.hw-message= message
      if errors.length
        each message in errors
          p.hw-message-error= message
      label(for="name")
      input#name(type="text", name="name", required, placeholder="Name")
      label(for="email") Email
      input#email(type="email", name="email", required, placeholder="Email")
      label(for="message") Message
      textarea#message(row=3, name="message", required, placeholder="Say it here")

      button.hw-submit(type="submit") Submit
      button.hw-reset(type="reset")  Reset

block append script
  //- connect assets
  != js('front/boot')
