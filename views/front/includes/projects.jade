section.hw-projects
  h1.hw-title
    each letter in 'Projects'.split('')
      span(data-text="#{letter}")= letter

  .hw-projects-list
    each project in projects
      dl.hw-projects-item(id="#{project.id}")
        dt.hw-projects-cover
          span= project.name
          img(src="#{project.cover.path}")
        dd.hw-projects-content-container
          article.hw-projects-content!= project.markup
          a(href="#").hw-projects-close close